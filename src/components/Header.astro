---
import { mainTitle } from "../config/site.js";

const title = Astro.props.title || "";
---

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        {(title.length > 0 ? title + " / " : "") + mainTitle}
    </title>
</head>

<style>
    #header-name::after {
        content: " schweiger";
    }

    @media (max-width: 400px) {
        #header-name::after {
            content: "";
        }
    }
</style>

<nav>
    <a href="/#home" id="header-name" translate="no">leo</a>
    <ul>
        <li><a href="/games#developed">games</a></li>
        <li><a href="/about#leo">about</a></li>
        <li><a href="#contact">contact</a></li>
    </ul>
</nav>
