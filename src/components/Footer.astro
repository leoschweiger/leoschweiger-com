---
import { email, footerLinks } from "../scripts/config.js";

const getInTouch = Astro.props.getInTouch || "true";
---

<script>
    import "../scripts/copied.js";
</script>

{
    getInTouch == "true" ? (
        <section
            class="getintouch createsCopyParticle preventSelect"
            onclick={`navigator.clipboard.writeText("${email}")`}
        >
            <h2 class="touch1 createsCopyParticle">get in touch</h2>
            <h2 class="touch2 createsCopyParticle">copy my email</h2>
        </section>
    ) : (
        <div class="space" />
    )
}

